doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content="width=device-width, initial-scale='1'" )
    title Sass And Pug
    include mixins/stylesheets.pug 
    link(rel='stylesheet' href='css/account.css')
  body
    // Start header
    include components/header.pug 
    // End Header
    
    // Start Navbar
    include components/nav.pug
    // End Navbar
    
    // Form
    .login.my-5
      .container
        .div.bg-white.my-5.p-4
          h2 Login
          form.border.my-4.p-4.rounded
            label.d-block Username or email address *
            input(type='text').mt-2.mb-3.w-100.form-control
            label.d-block Password *
            input(type='password').mt-2.mb-3.w-100.form-control
            label
              input(type='checkbox' id='check')
              span(for='#check').ml-2 Remember me
            button.d-block.mt-3.px-4.py-2.border-0.text-white LOG IN
            a(href='#').d-block.mt-3.text-decoration-none.text-muted Lost Your Password ? 
    
    
    // Start Footer Info
    include components/footer-info.pug
    // End Footer Info
    
    // Start Footer
    include components/footer.pug
    // End Footer 
    
    // Start Back To Top button
    include components/back-to-top.pug
    // End Back To Top button
    
  
    
    script(src='js/jquery-3.3.1.min.js')
    script(src='js/popper.min.js')
    script(src='js/bootstrap.min.js')
    script(src='js/account.js')  
    
